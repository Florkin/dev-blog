<!-- Page Header -->
<header class="masthead" style="background-image: url('{{ imgurl }}')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>{{ herotitle }}</h1>
                    <span class="subheading">{{ herosubtitle }}</span>

                    {% if post is defined %}
                    <span class="meta">Post√© par
                            <span>{{ post.author }}</span>
                            le {{ post.date_update|date("d/m/Y", "Europe/Paris") }}
                    </span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</header>
