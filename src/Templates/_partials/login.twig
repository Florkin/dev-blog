<section class="login-popin">
    <div class="container">        
        <div class="row no-gutters">
            <div class="col-lg-6 bg-primary">
                <form class="p-5" method="post" action="{{ actionLogin }}">
                    {% for formfield in loginForm %}
                    <div class="row form-group">
                        <div class="col-md-12">
                            <div>{{ formfield|raw }}</div>
                        </div>
                    </div>
                    {% endfor %}
                </form>
            </div>
        </div>
    </div>
</section>