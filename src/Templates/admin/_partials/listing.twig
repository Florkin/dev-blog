{% for post in posts %}
    {#            {% if is_admin or user_id == post.id_user %}#}
    <div id="post-{{ post.id_post }}" class="border-bottom row hover-1-wrap mb-5 mb-lg-5">
        <div class="col-12">
            <div class="row">
                <div class="mb-4 mb-lg-0 col-lg-4">
                    <a href="#" class="hover-1">
                        <img src="./../img/posts_headers/post_{{ post.id_post }}.webp" alt="Image"
                             class="img-fluid">
                    </a>
                </div>
                <div class="col-lg-8 align-self-center order-lg-1">
                    <h2 class="text-black">{{ post.title }}</h2>
                    <p class="mb-2">{{ post.intro|raw }}</p>
                    <p class="mb-2">
                        <span class="mr-3">{{ post.author }}</span><span>{{ post.date_update|date("d/m/Y") }}</span>
                    </p>
                </div>
            </div>
            <div class="row mt-3 mb-3 post-toolbar">
                <div class="col-12 text-right">
                    <div class="post-toolbar-btns row">
                        <div class="col-12 col-md-6 col-xl-3">
                            {% if is_admin %}
                                {% if post.active == 1 %}
                                    <a href="{{ admin_url.base_url }}/activation-article/{{ post.id_post }}"
                                       class="w-100 mb-2 post-activation btn btn-warning">Desactiver</a>
                                {% else %}
                                    <a href="{{ admin_url.base_url }}/activation-article/{{ post.id_post }}"
                                       class="w-100 mb-2 post-activation btn btn-success">Activer</a>
                                {% endif %}
                            {% else %}
                                {% if post.active == 1 %}
                                    <span class="d-block w-100 mb-2 px-4 py-2 alert-success">Activ√©</span>
                                {% else %}
                                    <span class="d-block w-100 mb-2 px-4 py-2 alert-warning">En attente de validation</span>
                                {% endif %}
                            {% endif %}
                        </div>
                        <div class="col-12 col-md-6 col-xl-3">
                            <button type="button" class="w-100 mb-2 js-confirm-delete btn btn-danger"
                                    data-href="{{ admin_url.base_url }}/supprimer-article/{{ post.id_post }}"
                                    data-toggle="modal" data-target="#confirm-delete"
                                    class="btn btn-danger">
                                Supprimer
                            </button>
                        </div>
                        <div class="col-12 col-md-6 col-xl-3">
                            <a href="articles/{{ post.id_post }}" class="w-100 mb-2 btn btn-primary">Voir l'article</a>
                        </div>
                        <div class="col-12 col-md-6 col-xl-3">
                            <a href="{{ admin_url.base_url }}/modifier-article/{{ post.id_post }}"
                               class="w-100 mb-2 btn btn-secondary">Modifier</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endfor %}