{% extends 'layout.twig' %}

{% block head %}
    <title>Mot de passe oublié</title>
{% endblock %}

{% block content %}

    <section class="site-section">
        <div class="container">
            <div class="row justify-content-center aos-init aos-animate" data-aos="fade-up">
                <div class="col-lg-6 text-center heading-section mb-5">
                    <div class="code-icon">
                        <span class="icon-code"></span>
                    </div>
                    <h2 class="text-black mb-2">Mot de passe oublié?</h2>
                    <p>Demandez un nouveau mot de passe</p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-lg-6 bg-primary">
                    <form class="p-5 form" method="post" action="{{ actionResetPassword }}">
                        {% for formfield in passwordResetForm %}
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <div>{{ formfield|raw }}</div>
                                </div>
                            </div>
                        {% endfor %}
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}