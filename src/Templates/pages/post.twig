{% extends 'layout.twig' %}

{% block head %}
    <title>{{post.title|capitalize}}</title>
{% endblock %}

{% block content %}

<section class="site-section">
  <div class="container">
    <div class="row justify-content-center" data-aos="fade-up">
      <div class="col-lg-6 text-center heading-section mb-5">
        <div class="code-icon">
          <span class="icon-code"></span>
        </div>
        <h2 class="text-black mb-2">{{ post.title }}</h2>
        <p>{{post.date_update}}</p>
        <p>{{post.intro}}</p>        
      </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <img src="{{post.img_url}}" alt="post {{ post.id_post }}" class="img-fluid">
        </div>
        <div class="post-content col-lg-8">
            {{post.content|raw}}
        </div>
    </div>   
  </div>
</section>

{% endblock %}

