{% extends 'layout.twig' %}

{% block head %}
    <title>{{ post.title|capitalize }}</title>
{% endblock %}

{% block content %}

    <section class="site-section">
        <div class="container">
            <div class="row justify-content-center post-header" data-aos="fade-up">
                <div class="col-lg-6 text-center heading-section mb-5">
                    <div class="code-icon">
                        <span class="icon-code"></span>
                    </div>
                    <h2 class="text-black mb-2">{{ post.title|raw }}</h2>
                    <p>
                        <span class="mr-3">Auteur: {{ post.author }}</span>
                        <span>{{ post.date_update }}</span>
                    </p>
                    <p>{{ post.intro|raw }}</p>
                </div>
                <div class="col-lg-6 text-right pr-0 pl-0">
                    <img src="{{ post.img_url }}" alt="post {{ post.id_post }}" class="img-fluid">
                </div>
            </div>

            <div class="row">
                <div class="post-content">
                    {{ post.content|raw }}
                </div>
            </div>

            <div id="comments" class="mt-5 col-12 col-lg-12">
                <div class="comments-container">
                    <h2 class="text-black mb-2">Commentaires sur cet article</h2>
                    {% for comment in post.comments %}
                        <div class="row">
                            <div class="col-lg-8 col-12">
                                <div class="card card-white comment">
                                    <div class="comment-heading">
                                        <div class="float-left meta">
                                            <div class="title h5">
                                                <a href="#"><b>{{ comment.author }}</b></a>
                                                made a comment.
                                            </div>
                                            <h6 class="text-muted time">{{ comment.date_update }}</h6>
                                        </div>
                                    </div>
                                    <div class="comment-description">
                                        <p>{{ comment.comment }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="row" id="comment-add" >
                    <div class="col-12 col-lg-6">
                        <form method="post" action="{{ actionComment }}" class="mt-5 pt-3 border-top">
                            {% for field in commentForm %}
                                <div class="form-group">{{ field|raw }}</div>
                            {% endfor %}
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>


{% endblock %}
