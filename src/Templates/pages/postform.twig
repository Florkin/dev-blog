{% extends 'layout.twig' %}

{% block head %}
<title>Ajouter un post</title>
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
{% endblock %}

{% block content %}
<div class="header-spacer"></div>
<section class="site-section">
    <div class="container">
        <div class="row justify-content-center aos-init aos-animate" data-aos="fade-up">
            <div class="col-lg-6 text-center heading-section mb-5">
                <div class="code-icon">
                    <span class="icon-code"></span>
                </div>
                <h2 class="text-black mb-2">Ajouter un post</h2>
                <p>Remplissez le formulaire pour proposer un post</p>
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-lg-12 bg-primary">
                <form class="p-5 form" method="post" action="{{ actionAddpost }}" enctype="multipart/form-data">
                    {% for formfield in postForm %}
                    <div class="row form-group">
                        <div class="col-md-12">
                            <div>{{ formfield|raw }}</div>
                        </div>
                    </div>
                    {% endfor %}
                </form>
            </div>
        </div>
    </div>
</section>

{% endblock %}